<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/dp_322"
            android:layout_height="@dimen/dp_376"
            android:background="@drawable/bg_rounded_corner_black_russian"
            android:gravity="center"
            android:padding="@dimen/dp_10">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:cardCornerRadius="@dimen/dp_18">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivOffer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/delivery_boy" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</layout>