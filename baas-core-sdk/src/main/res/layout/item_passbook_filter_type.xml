<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.payu.baas.core.model.entities.model.TypeModel" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/viewUnSelected"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:gravity="center">

            <View
                android:id="@+id/viewSelected"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:visibility="@{model.selected?View.VISIBLE:View.GONE}" />

        </LinearLayout>

        <com.payu.baas.core.view.viewExtension.CustomTextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@{model.label}"
            android:textSize="@dimen/sp_15"
            app:custFont="@string/app_font_regular" />
    </LinearLayout>

</layout>