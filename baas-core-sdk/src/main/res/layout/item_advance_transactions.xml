<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_25">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/dp_5"
                android:layout_height="0dp"
                android:background="@drawable/bg_half_rectangle"
                app:layout_constraintBottom_toBottomOf="@+id/tvDateRange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvDateRange" />

            <com.payu.baas.coreUI.view.viewExtension.CustomTextView
                android:id="@+id/tvDateRange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:ellipsize="end"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:singleLine="true"
                android:text="Oct 17 - Oct 23"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_18"
                app:custFont="@string/app_font_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="parent" />

            <com.payu.baas.coreUI.view.viewExtension.CustomTextView
                android:id="@+id/tvTotalAdvanceUsed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="start"
                android:text="Total Advance Used"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                app:custFont="@string/app_font_semi_bold"
                app:layout_constraintEnd_toStartOf="@+id/tvTotalAdvanceUsedAmount"
                app:layout_constraintStart_toStartOf="@+id/tvDateRange"
                app:layout_constraintTop_toBottomOf="@+id/tvDateRange" />

            <com.payu.baas.coreUI.view.viewExtension.CustomTextView
                android:id="@+id/tvTotalAdvanceUsedAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2658.36"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                app:custFont="@string/app_font_regular"
                app:layout_constraintEnd_toEndOf="@+id/tvDateRange"
                app:layout_constraintTop_toTopOf="@+id/tvTotalAdvanceUsed" />

            <com.payu.baas.coreUI.view.viewExtension.CustomTextView
                android:id="@+id/tvFeesCharged"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="start"
                android:text="Fees Charged"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                app:custFont="@string/app_font_semi_bold"
                app:layout_constraintEnd_toStartOf="@+id/tvFeesChargedAmount"
                app:layout_constraintStart_toStartOf="@+id/tvDateRange"
                app:layout_constraintTop_toBottomOf="@+id/tvTotalAdvanceUsed" />

            <com.payu.baas.coreUI.view.viewExtension.CustomTextView
                android:id="@+id/tvFeesChargedAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2658.36"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                app:custFont="@string/app_font_regular"
                app:layout_constraintEnd_toEndOf="@+id/tvDateRange"
                app:layout_constraintTop_toTopOf="@+id/tvFeesCharged" />


            <com.payu.baas.coreUI.view.viewExtension.CustomTextView
                android:id="@+id/tvLatePaymentFees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="start"
                android:text="Late Payment Fees"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                app:custFont="@string/app_font_semi_bold"
                app:layout_constraintEnd_toStartOf="@+id/tvLatePaymentFeesAmount"
                app:layout_constraintStart_toStartOf="@+id/tvDateRange"
                app:layout_constraintTop_toBottomOf="@+id/tvFeesCharged" />

            <com.payu.baas.coreUI.view.viewExtension.CustomTextView
                android:id="@+id/tvLatePaymentFeesAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2658.36"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                app:custFont="@string/app_font_regular"
                app:layout_constraintEnd_toEndOf="@+id/tvDateRange"
                app:layout_constraintTop_toTopOf="@+id/tvLatePaymentFees" />

            <com.payu.baas.coreUI.view.viewExtension.CustomTextView
                android:id="@+id/tvPaidBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="start"
                android:text="Paid Back"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                app:custFont="@string/app_font_semi_bold"
                app:layout_constraintEnd_toStartOf="@+id/tvPaidBackAmount"
                app:layout_constraintStart_toStartOf="@+id/tvDateRange"
                app:layout_constraintTop_toBottomOf="@+id/tvLatePaymentFees" />

            <com.payu.baas.coreUI.view.viewExtension.CustomTextView
                android:id="@+id/tvPaidBackAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2658.36"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                app:custFont="@string/app_font_regular"
                app:layout_constraintEnd_toEndOf="@+id/tvDateRange"
                app:layout_constraintTop_toTopOf="@+id/tvPaidBack" />

            <com.payu.baas.coreUI.view.viewExtension.CustomTextView
                android:id="@+id/tvOverdueBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="start"
                android:text="Overdue Balance"
                android:textColor="@color/red_light"
                android:textSize="@dimen/sp_14"
                app:custFont="@string/app_font_semi_bold"
                app:layout_constraintEnd_toStartOf="@+id/tvOverdueBalanceAmount"
                app:layout_constraintStart_toStartOf="@+id/tvDateRange"
                app:layout_constraintTop_toBottomOf="@+id/tvPaidBack" />

            <com.payu.baas.coreUI.view.viewExtension.CustomTextView
                android:id="@+id/tvOverdueBalanceAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2658.36"
                android:textColor="@color/red_light"
                android:textSize="@dimen/sp_14"
                app:custFont="@string/app_font_regular"
                app:layout_constraintEnd_toEndOf="@+id/tvDateRange"
                app:layout_constraintTop_toTopOf="@+id/tvOverdueBalance" />

            <com.payu.baas.coreUI.view.viewExtension.CustomGradientTextView
                android:id="@+id/tvSeeTransactionDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/btn_see_transaction_details"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                app:custFont="@string/app_font_bold"
                app:layout_constraintStart_toStartOf="@+id/tvDateRange"
                app:layout_constraintTop_toBottomOf="@+id/tvOverdueBalance" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</layout>